<%= semantic_form_for(@tasaiva) do |f| %>

<%= f.semantic_errors %>
	<%= render('shared/common_form_buttons') %>

	<%= f.inputs do %>
	  <%= f.input :detalle %>
	  <%= f.input :porcentaje, :as => :numeric %>
	  <%= f.input :since, :as => :datepicker %>
	  <%= f.input :until, :as => :datepicker %>
	  <%= f.input :account, :label => true, :as => :select, :collection => current_company.accounts.leaves.map{|a|[[a.code, a.name].compact.join(' &raquo; ').html_safe, a.id]}, :include_blank => true ,:prompt => '-- seleccione una cuenta --', :wrapper_html => {:style => 'width:41%'} %>
	<% end %> 

<% end %>